{
    "controller": [
        {
            "name": "安卓端",
            "type": "Adb"
        },
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "method": "Search",
                "class_name": ".*",
                "window_name": "Visual Studio"
            }
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "{PROJECT_DIR}/resource/base"
            ]
        }
    ],
    "task": [
        {
            "name": "开始唤醒",
            "entry": "开始唤醒"
        },
        {
            "name": "自动远征",
            "entry": "开始自动远征",
            "option": [
                "远征等待模式"
            ]
        },
        {
            "name": "自动战役",
            "entry": "开始自动战役",
            "option": [
                "战役选择难度",
                "战役选择关卡",
                "战役选择阵型"
            ],
            "param": {
                "退出浴场": {
                    "next": [
                        "战役修理"
                    ]
                }
            }
        },
        {
            "name": "自动6-1炸鱼",
            "entry": "开始出征",
            "option": [
                "炸鱼编队",
                "炸鱼次数",
                "炸鱼SL设置"
            ],
            "param": {
                "第六章": {
                    "next": [
                        "炸鱼6-1",
                        "6-2",
                        "6-3",
                        "6-4"
                    ]
                },
                "6-2": {
                    "next": [
                        "炸鱼6-1",
                        "6-2"
                    ]
                },
                "退出浴场": {
                    "next": [
                        "炸鱼修理"
                    ]
                }
            }
        }
    ],
    "option": {
        "战役选择难度": {
            "cases": [
                {
                    "name": "普通",
                    "param": {
                        "普通难度": {
                            "action": "Click",
                            "next": [
                                "战役次数",
                                "选择战役"
                            ]
                        },
                        "困难难度": {
                            "action": "DoNothing",
                            "next": [
                                "战役次数",
                                "选择战役"
                            ]
                        }
                    }
                },
                {
                    "name": "困难",
                    "param": {

                    }
                }
            ]
        },
        "战役选择关卡": {
            "cases": [
                {
                    "name": "驱逐改造核心-纳尔维克海战",
                    "param": {
                        "选择战役": {
                            "expected": [
                                "驱逐改造核心",
                                "纳尔维克海战"
                            ]
                        }
                    }
                },
                {
                    "name": "巡洋改造核心-马塔潘角海战",
                    "param": {
                        "选择战役": {
                            "expected": [
                                "巡洋改造核心",
                                "马塔潘角海战"
                            ]
                        }
                    }
                },
                {
                    "name": "战列改造核心-丹麦海峡海战",
                    "param": {
                        "选择战役": {
                            "expected": [
                                "战列改造核心",
                                "丹麦海峡海战"
                            ]
                        }
                    }
                },
                {
                    "name": "航母改造核心-珊瑚海海战",
                    "param": {
                        "选择战役": {
                            "expected": [
                                "航母改造核心",
                                "珊瑚海海战"
                            ]
                        }
                    }
                },
                {
                    "name": "潜艇改造核心-海峡伏击战",
                    "param": {
                        "选择战役": {
                            "expected": [
                                "潜艇改造核心",
                                "海峡伏击战"
                            ]
                        }
                    }
                }
            ]
        },
        "战役选择阵型": {
            "cases": [
                {
                    "name": "单纵阵",
                    "param": {
                        "战役阵型": {
                            "template": "单纵阵.png"
                        }
                    }
                },
                {
                    "name": "复纵阵",
                    "param": {
                        "战役阵型": {
                            "template": "复纵阵.png"
                        }
                    }
                },
                {
                    "name": "轮型阵",
                    "param": {
                        "战役阵型": {
                            "template": "轮型阵.png"
                        }
                    }
                },
                {
                    "name": "梯形阵",
                    "param": {
                        "战役阵型": {
                            "template": "梯形阵.png"
                        }
                    }
                },
                {
                    "name": "单横阵",
                    "param": {
                        "战役阵型": {
                            "template": "单横阵.png"
                        }
                    }
                }
            ]
        },
        "远征等待模式": {
            "cases": [
                {
                    "name": "开启（在程序关闭前无限等待收发远征）",
                    "param": {
                        "自动收远征": {
                            "next": [
                                "点击远征",
                                "远征收获奖励",
                                "退出远征2"
                            ]
                        },
                        "点击远征": {
                            "next": [
                                "远征收获奖励",
                                "退出远征2"
                            ]
                        },
                        "确认远征": {
                            "next": [
                                "远征收获奖励",
                                "退出远征2"
                            ]
                        }
                    }
                },
                {
                    "name": "关闭",
                    "param": {

                    }
                }
            ]
        },
        "炸鱼编队": {
            "cases": [
                {
                    "name": "第一编队",
                    "param": {
                        
                    }
                },
                {
                    "name": "第二编队",
                    "param": {
                        "炸鱼编队": {
                            "template": "2队.png"
                        }
                    }
                },
                {
                    "name": "第三编队",
                    "param": {
                        "炸鱼编队": {
                            "template": "3队.png"
                        }
                    }
                },
                {
                    "name": "第四编队",
                    "param": {
                        "炸鱼编队": {
                            "template": "4队.png"
                        }
                    }
                }
            ]
        },
        "炸鱼次数": {
            "cases": [
                {
                    "name": "1次",
                    "param": {
                        "炸鱼6-1": {
                            "times_limit": 1
                        }
                    }
                },
                {
                    "name": "10次",
                    "param": {
                        "炸鱼6-1": {
                            "times_limit": 10
                        }
                    }
                },
                {
                    "name": "20次",
                    "param": {
                        "炸鱼6-1": {
                            "times_limit": 20
                        }
                    }
                },
                {
                    "name": "30次",
                    "param": {
                        "炸鱼6-1": {
                            "times_limit": 30
                        }
                    }
                },
                {
                    "name": "无限（直到船舱满或程序关闭等情况终止）",
                    "param": {

                    }
                }
            ]
        },
        "炸鱼SL设置": {
            "cases": [
                {
                    "name": "遇雷巡和轻母SL，只打纯潜艇",
                    "param": {

                    }
                },
                {
                    "name": "不SL",
                    "param": {
                        "炸鱼识别轻母": {
                            "enabled": false
                        },
                        "炸鱼识别雷巡": {
                            "enabled": false
                        }
                    }
                }
            ]
        }
    }
}
